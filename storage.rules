rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to generated logos
    match /logos/{userId}/{logoId}/{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access only to authenticated users or functions
    match /logos/{userId}/{logoId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow functions to write anywhere
    match /{allPaths=**} {
      allow write: if request.auth.token.firebase.sign_in_provider == 'custom';
    }
  }
}